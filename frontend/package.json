{
    "name": "ai-virtual-try-on-frontend",
    "private": true,
    "version": "1.0.0",
    "description": "Frontend React application for AI Virtual Try-On",
    "type": "module",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "dev": "vite",
        "dev:py": "vite",
        "dev:local": "npm run install:local && vite",

        "build": "npm run build:clean && npm run build:prod",
        "build:clean": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', {recursive: true});\"",
        "build:prod": "cross-env NODE_ENV=production vite build",
        "build:server": "npm run install:server && npm run build:prod",
        "build:simple": "vite build",

        "preview": "vite preview",
        "preview:prod": "cross-env NODE_ENV=production vite preview",
        "test": "vitest --run",
        "test:watch": "vitest",
        "lint": "eslint . --ext ts,tsx --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",

        "install:local": "npm install --no-optional",
        "install:server": "npm install && npm install @rollup/rollup-linux-x64-gnu --save-optional",
        "postinstall": "node -e \"if(process.platform === 'linux' && process.arch === 'x64') { try { require('child_process').execSync('npm install @rollup/rollup-linux-x64-gnu --save-optional', {stdio:'inherit'}); } catch(e) { console.log('Optional Linux binary install skipped:', e.message); } }\""
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "html2canvas": "^1.4.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.4.5",
        "@testing-library/react": "^15.0.0",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "cross-env": "^7.0.3",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "jsdom": "^23.0.1",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "terser": "^5.43.1",
        "typescript": "^5.2.2",
        "vite": "^5.4.0",
        "vitest": "^1.0.4"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "^4.50.1"
    }
}
